{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "database": {
      "title": "Database",
      "type": "string",
      "minLength": 1
    },
    "username": {
      "title": "Username",
      "type": "string",
      "minLength": 1
    },
    "usePassword": {
      "title": "Use password",
      "type": "string",
      "enum": [
        "SQLTools Driver Credentials",
        "Ask on connect",
        "Use empty password",
        "Save password"
      ],
      "default": "SQLTools Driver Credentials"
    },
    "password": {
      "title": "Password",
      "type": "string",
      "minLength": 1
    }
  },
  "properties": {
    "connectionMethod": {
      "title": "Connect using",
      "type": "string",
      "minLength": 1,
      "enum": [
        "Server and Port",
        "Socket File",
        "Connection String"
      ],
      "default": "Server and Port"
    },
    "connectionTimeout": {
      "title": "Connection Timeout",
      "type": "integer",
      "minimum": 0,
      "default": 15
    },
    "mssqlOptions": {
      "type": "object",
      "title": "MSSQL Tedious driver specific options",
      "properties": {
        "abortTransactionOnError": {
          "type": "boolean"
        },
        "appName": {
          "type": "string",
          "default": "SQLTools"
        },
        "instanceName": {
          "type": "string"
        },
        "useUTC": {
          "type": "boolean",
          "default": true
        },
        "encrypt": {
          "type": "boolean",
          "default": true
        },
        "trustServerCertificate": {
          "type": "boolean",
          "default": false
        },
        "tdsVersion": {
          "type": "string",
          "enum": [
            "7_1",
            "7_2",
            "7_3_A",
            "7_3_B",
            "7_4"
          ]
        }
      }
    },
    "ssh": {
      "title": "Over SSH",
      "type": "string",
      "enum": ["Enabled", "Disabled"],
      "default": "Disabled"
    }
  },
  "dependencies": {
    "connectionMethod": {
      "oneOf": [
        {
          "properties": {
            "connectionMethod": {
              "enum": [
                "Server and Port"
              ]
            },
            "server": {
              "title": "Server Address",
              "type": "string",
              "minLength": 1,
              "default": "localhost"
            },
            "port": {
              "title": "Port",
              "minimum": 1,
              "default": 1433,
              "type": "integer"
            },
            "database": {
              "$ref": "#/definitions/database"
            },
            "username": {
              "$ref": "#/definitions/username"
            },
            "usePassword": {
              "$ref": "#/definitions/usePassword"
            }
          },
          "required": [
            "server",
            "port",
            "username"
          ]
        },
        {
          "properties": {
            "connectionMethod": {
              "enum": [
                "Socket File"
              ]
            },
            "socketPath": {
              "title": "Socket file path",
              "type": "string",
              "minLength": 1
            },
            "database": {
              "$ref": "#/definitions/database"
            },
            "username": {
              "$ref": "#/definitions/username"
            },
            "usePassword": {
              "$ref": "#/definitions/usePassword"
            }
          },
          "required": [
            "socketPath",
            "username"
          ]
        },
        {
          "properties": {
            "connectionMethod": {
              "enum": [
                "Connection String"
              ]
            },
            "connectString": {
              "title": "Connection String",
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "connectString"
          ]
        }
      ]
    },
    "usePassword": {
      "oneOf": [
        {
          "properties": {
            "usePassword": {
              "enum": [
                "Ask on connect"
              ]
            },
            "askForPassword": {
              "type": "boolean",
              "default": true
            }
          }
        },
        {
          "properties": {
            "usePassword": {
              "enum": [
                "Use empty password"
              ]
            }
          }
        },
        {
          "properties": {
            "usePassword": {
              "enum": [
                "Save password"
              ]
            },
            "password": {
              "$ref": "#/definitions/password"
            }
          },
          "required": [
            "password"
          ]
        },
        {
          "properties": {
            "usePassword": {
              "enum": [
                "SQLTools Driver Credentials"
              ]
            }
          }
        }
      ]
    },
    "ssh": {
      "oneOf": [
        {
          "properties": {
            "ssh": {
              "enum": ["Disabled"]
            }
          }
        },
        {
          "properties": {
            "ssh": {
              "enum": ["Enabled"]
            },
            "sshOptions": {
              "type": "object",
              "title": "SSH Connection Options",
              "properties": {
                "host": {
                  "type": "string",
                  "title": "Server Address",
                  "minLength": 1
                },
                "port": {
                  "type": "integer",
                  "title": "Port",
                  "default": 22,
                  "minimum": 1
                },
                "username": {
                  "type": "string",
                  "title": "Username",
                  "minLength": 1
                },
                "password": {
                  "type": "string",
                  "title": "Password"
                },
                "privateKeyPath": {
                  "type": "string",
                  "title": "Private Key File Path"
                }
              },
              "required": ["host", "username"]
            }
          },
          "required": ["sshOptions"]
        }
      ]
    }
  },
  "required": ["connectionMethod"]
}
